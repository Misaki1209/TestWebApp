@page
@model TestWebApp.Pages.Product.Create

@{
    Layout = "Shared/_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Create new Product</title>
</head>
<body>
<form method="post">
    <input asp-for="Product.ProductId" type="hidden" value="@Model.ProductId"/>
    <div class="form-group">
        <label asp-for="Product.ProductName">Product name</label>
        <input asp-for="Product.ProductName" type="text" class="form-control" placeholder="name">
    </div>
    <div class="form-group">
        <label asp-for="Product.UnitPrice">Unit price</label>
        <input asp-for="Product.UnitPrice" class="form-control" placeholder="unit price">
    </div>
    <div class="form-group">
        <label asp-for="Product.UnitsInStock">Units in stock</label>
        <input asp-for="Product.UnitsInStock" class="form-control" placeholder="units in stock">
    </div>

    <button type="submit" class="btn btn-primary" style="width: 150px"> Create</button>
</form>
</body>
</html>